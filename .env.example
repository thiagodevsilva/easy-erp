# ==========================
# Configurações do Banco de Dados
# ==========================
DB_HOST=localhost        # Host do banco (ex.: 127.0.0.1)
DB_NAME=easy_erp         # Nome do banco de dados
DB_USER=root             # Usuário do banco
DB_PASS=senha_aqui       # Senha do banco

# ==========================
# Configurações de SMTP (Envio de E-mails)
# ==========================
MAIL_HOST=smtp.gmail.com        # Servidor SMTP (ex.: smtp.gmail.com)
MAIL_PORT=587                   # Porta SMTP (587 TLS, 465 SSL)
MAIL_USER=seuemail@gmail.com    # E-mail usado para autenticação SMTP
MAIL_PASS=sua_senha_ou_app_key  # Senha ou App Password (recomendado para Gmail)
MAIL_FROM=seuemail@gmail.com    # Remetente padrão dos e-mails
MAIL_FROM_NAME=Easy ERP         # Nome que aparecerá como remetente
